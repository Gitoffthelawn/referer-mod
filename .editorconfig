root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{go,js,json}]
indent_style = tab
indent_size = 4

[*.{html,gohtml}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.yaml]
indent_style = space
indent_size = 2

[Dockerfile]
indent_style = space
indent_size = 4
